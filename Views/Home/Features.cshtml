@{
    ViewData["Title"] = "Tính năng";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="text-center">
            <h1 class="display-4 fw-bold mb-4">Tính năng toàn diện</h1>
            <p class="lead">Mọi thứ bạn cần để tổ chức sự kiện thành công</p>
        </div>
    </div>
</section>

<!-- Features Grid -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- QR Code Management -->
            <div class="col-lg-6">
                <div class="card feature-card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex mb-3">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                                <i class="bi bi-qr-code-scan text-primary fs-1"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Quản lý QR Code</h5>
                                <p class="text-muted">Tạo và quản lý mã QR tự động cho từng khách mời</p>
                            </div>
                        </div>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Tạo QR code tự động cho từng khách</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Mã hóa AES 256-bit bảo mật cao</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>QR code có thời hạn sử dụng</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Tích hợp thông tin khách và sự kiện</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Real-time Check-in -->
            <div class="col-lg-6">
                <div class="card feature-card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex mb-3">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3 me-3">
                                <i class="bi bi-speedometer2 text-success fs-1"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Check-in Real-time</h5>
                                <p class="text-muted">Theo dõi check-in trực tiếp với SignalR</p>
                            </div>
                        </div>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Cập nhật trạng thái tức thì</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Thống kê live trên dashboard</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Thông báo check-in ngay lập tức</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Hỗ trợ nhiều thiết bị đồng thời</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Email Automation -->
            <div class="col-lg-6">
                <div class="card feature-card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex mb-3">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3 me-3">
                                <i class="bi bi-envelope-at-fill text-info fs-1"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Email Tự động</h5>
                                <p class="text-muted">Gửi vé mời và thông báo tự động</p>
                            </div>
                        </div>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Gửi vé mời có QR code đính kèm</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Template email tùy chỉnh</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Email nhắc nhở trước sự kiện</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Thông báo check-in thành công</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Multi-device Support -->
            <div class="col-lg-6">
                <div class="card feature-card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex mb-3">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3 me-3">
                                <i class="bi bi-devices text-warning fs-1"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Đa thiết bị</h5>
                                <p class="text-muted">Hoạt động trên mọi thiết bị, offline/online</p>
                            </div>
                        </div>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Web app responsive cho mọi thiết bị</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Hoạt động offline và đồng bộ sau</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Nhiều điểm check-in cùng lúc</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>PWA cài đặt như app native</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Analytics & Reports -->
            <div class="col-lg-6">
                <div class="card feature-card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex mb-3">
                            <div class="bg-danger bg-opacity-10 rounded-3 p-3 me-3">
                                <i class="bi bi-graph-up-arrow text-danger fs-1"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Thống kê & Báo cáo</h5>
                                <p class="text-muted">Phân tích chi tiết và báo cáo đa dạng</p>
                            </div>
                        </div>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Dashboard thống kê real-time</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Xuất báo cáo Excel/PDF</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Phân tích xu hướng check-in</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Báo cáo tùy chỉnh theo nhu cầu</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Payment Integration -->
            <div class="col-lg-6">
                <div class="card feature-card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex mb-3">
                            <div class="bg-secondary bg-opacity-10 rounded-3 p-3 me-3">
                                <i class="bi bi-credit-card-fill text-secondary fs-1"></i>
                            </div>
                            <div>
                                <h5 class="card-title">Tích hợp Thanh toán</h5>
                                <p class="text-muted">Đa dạng phương thức thanh toán</p>
                            </div>
                        </div>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Stripe, MoMo, PayPal, VNPAY</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Thanh toán an toàn và bảo mật</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Tự động nâng cấp gói dịch vụ</li>
                            <li class="mb-2"><i class="bi bi-check2 text-success me-2"></i>Hóa đơn và quản lý giao dịch</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- API & Integration -->
<section class="bg-light py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">API & Tích hợp</h2>
            <p class="text-muted">Mở rộng và tích hợp với hệ thống hiện có</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-code-slash display-4 text-primary mb-3"></i>
                    <h5>RESTful API</h5>
                    <p class="text-muted">API đầy đủ để tích hợp với hệ thống khác</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-webhook display-4 text-success mb-3"></i>
                    <h5>Webhooks</h5>
                    <p class="text-muted">Nhận thông báo real-time về sự kiện</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-file-code display-4 text-info mb-3"></i>
                    <h5>SDKs</h5>
                    <p class="text-muted">Thư viện cho các ngôn ngữ phổ biến</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Sẵn sàng trải nghiệm?</h2>
        <p class="lead mb-4">Tạo sự kiện đầu tiên trong vài phút</p>
        <button class="btn btn-primary btn-lg px-4 me-3" data-bs-toggle="modal" data-bs-target="#registerModal">
            Dùng thử miễn phí
        </button>
        <a href="/Home/Contact" class="btn btn-outline-primary btn-lg px-4">
            Liên hệ tư vấn
        </a>
    </div>
</section> 