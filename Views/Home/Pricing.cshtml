@section Scripts {
<script>
document.getElementById('annualBilling').addEventListener('change', function() {
    const monthlyPrices = document.querySelectorAll('.monthly-price');
    const annualPrices = document.querySelectorAll('.annual-price');
    
    if (this.checked) {
        monthlyPrices.forEach(p => p.classList.add('d-none'));
        annualPrices.forEach(p => p.classList.remove('d-none'));
    } else {
        monthlyPrices.forEach(p => p.classList.remove('d-none'));
        annualPrices.forEach(p => p.classList.add('d-none'));
    }
});
</script>
} 